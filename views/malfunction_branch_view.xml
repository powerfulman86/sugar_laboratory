<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_transaction_type_form" model="ir.ui.view">
            <field name="name">lab.malfunctions.branch.form</field>
            <field name="model">lab.malfunctions.branch</field>
            <field name="arch" type="xml">
                <form string="Branch Malfunctions">
                    <header>
                        <button class="oe_highlight" name="action_approve" states="draft" type="object" string="Approve"/>
                        <button class="oe_highlight" name="action_cancel" states="draft" type="object" string="Cancel"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h3>
                                <field name="name" readonly="1"/>
                            </h3>
                        </div>
                        <group>
                            <group>
                                <field name="branch_id" options="{'no_create': True}"/>
                                <field name="malfunction_id" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </group>
                            <field name="notes" placeholder="Notes ....."/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_malfunctions_branch_list" model="ir.ui.view">
            <field name="name">lab.malfunctions.branch.list</field>
            <field name="model">lab.malfunctions.branch</field>
            <field name="arch" type="xml">
                <tree string="Branch Malfunctions">
                    <field name="name"/>
                    <field name="branch_id"/>
                    <field name="malfunction_id"/>
                    <field name="state"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>

        <record id="action_malfunction_branch" model="ir.actions.act_window">
            <field name="name">Branch Malfunction</field>
            <field name="res_model">lab.malfunctions.branch</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Branch Malfunction
                </p>
                <p>
                    Branch Malfunction
                </p>
            </field>
        </record>
    </data>
</odoo>